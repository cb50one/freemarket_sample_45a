= render partial: "layouts/main-header"
- breadcrumb :userAddress
= breadcrumbs separator: " &rsaquo; ", link_current: true
%main.mypage-container
  .mypage-content
    .user-info
      .user-info__header
        本人情報の登録
      .user-info__main
        %p.user-info__main-text
          お客さまの本人情報をご登録ください。
          %br 登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
        .terms__right
          = link_to edit_address_path, class: "terms__link" do
            本人確認書類のアップデートについて
            %span.angle-right
              = icon "fas", "angle-right"
        %h2.user-info__main-title
          お名前
        %p.user-info__main-content
          = current_user.last_name + " " + current_user.first_name
        %h2.user-info__main-title
          お名前カナ
        %p.user-info__main-content
          = current_user.last_name_kana + " " + current_user.first_name_kana
        %h2.user-info__main-title
          生年月日
        %p.user-info__main-content
          = current_user.birthday_info
        = form_for current_user.address do |f|
          .user-info__main-field
            .field
              = f.label :郵便番号
              %span.optional 任意
              %br/
              = f.text_field :zip_code, placeholder: "例）123-4567"
            .field
              = f.label :都道府県
              %span.optional 任意
              %br/
              .prefecture-field
                = f.select :prefecture, @prefectures.map{|t| [t.name]}
                %span.select-icon
                  = icon "fas", "angle-down", class: "select-icon"
            .field
              = f.label :市区町村
              %span.optional 任意
              %br/
              = f.text_field :city, placeholder: "例）横浜市緑区"
            .field
              = f.label :番地
              %span.optional 任意
              %br/
              = f.text_field :street, placeholder: "例）青山1-1-1"
            .field
              = f.label :建物名
              %span.optional 任意
              %br/
              = f.text_field :building, placeholder: "例）柳ビル103"
            .actions
              = f.submit "登録する", class: "btn action-btn"
          .terms__right.last
            = link_to edit_address_path, class: "terms__link" do
              本人確認書類のアップデートについて
              %span.angle-right
                = icon "fas", "angle-right"

  .mypage-side
    %nav.mypage-side-nav
      %ul.mypage-side-nav__list
        %li
          = link_to user_path(current_user), class: "mypage-side-nav__list__item active" do
            マイページ
            = icon "fas", "angle-right" , class: "mypage-side-nav__list__icon"
        %li
          = link_to user_path(current_user), class: "mypage-side-nav__list__item" do
            お知らせ
            = icon "fas", "angle-right" , class: "mypage-side-nav__list__icon"
        %li
          = link_to user_path(current_user), class: "mypage-side-nav__list__item" do
