            = icon "fas", "angle-right" , class: "mypage-side-nav__list__icon"
        %li
          = link_to user_path(current_user), class: "mypage-side-nav__list__item" do
            いいね！一覧
            = icon "fas", "angle-right" , class: "mypage-side-nav__list__icon"
        %li
          = link_to user_path(current_user), class: "mypage-side-nav__list__item" do
            出品する
            = icon "fas", "angle-right" , class: "mypage-side-nav__list__icon"
        %li
          = link_to user_path(current_user), class: "mypage-side-nav__list__item" do
