.signin
  .signup__header
    .signup__header__mercari-logo
      = link_to image_tag("mercari_logo_horizontal.png")
    .signup__header__progress
      %ul.progress
        %li.through
          会員情報
          .bubble.bubble-first
        %li.through
          電話番号認証
          .bubble
        %li.active
          お届け先住所入力
          .bubble
        %li
          支払い方法
          .bubble
        %li
          完了
          .bubble.bubble-last
  .signup__panel
    .signup__panel__title
      %h2 住所入力
    .signup__panel__field
      .field
        %label 郵便番号
        %span.required 必須
        %br/
        %input{type: "text", placeholder: "例）123-4567"}
      .field
        %label 都道府県
        %span.required 必須
        %br/
        .birth-field.prefecture-field
          %select ["北海道","青森","秋田","岩手","山形","宮城"]
          %span.select-icon
            = fa_icon("angle-down")
      .field
        %label 市区町村
        %span.required 必須
        %br/
        %input{type: "text", placeholder: "例）横浜市緑区"}
      .field
        %label 番地
        %span.required 必須
        %br/
        %input{type: "text", placeholder: "例）青山1-1-1"}
      .field
        %label 建物名
        %span.required.optional 任意
        %br/
        %input{type: "text", placeholder: "例）柳ビル103"}
      .actions
        = button_to "次へ進む", new4_user_registration_path, method: :get, class: "btn action-btn"
  = render "users/shared/footer"
